<div class="main_header">
  <div class="left-header">
    <div class="header-title">
    <%# 親要素とのmarginをとることができる %>
      <%= @room.name %>
    </div>
  </div>
  <div class="right_header">
    <div class="close_room">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>
<div class="main_contents">
  <%= render partial: 'message', collection: @messages %>
</div>
<%= form_with model: [@room, @message] , html: {class: "main_footer"}, local: true do |f|%>
  <div class="form">
    <%= f.text_field :content, class: "chat_form", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <% f.file_field :image, class: "hidden"%>
    </label>
  </div>
  <%= f.submit '送信', class: "form-submit" %>
<% end %>